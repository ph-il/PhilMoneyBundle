{
    "name": "phil/money-bundle",
    "type": "symfony-bundle",
    "description": "This is a Symfony bundle that integrates moneyphp/money library (Fowler pattern): https://github.com/moneyphp/money.",
    "keywords": ["money", "currency", "fowler", "conversion"],
    "homepage": "https://github.com/ph-il/PhilMoneyBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Philippe Gamache",
            "homepage": "https://github.com/ph-il"
        },
        {
            "name": "Philippe Le Van",
            "homepage": "https://twitter.com/plv"
        },
        {
            "name": "Sebastien Lefebvre"
        },
        {
            "name": "Martin Aarhof"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl" : "*",
        "ext-intl": "*",
        "ext-simplexml": "*",
        "moneyphp/money": "^3.3 | ^4.0",
        "symfony/form": "^6.0",
        "symfony/twig-bundle": "^6.0",
        "symfony/console": "^6.0",
        "symfony/dom-crawler": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/templating": "^6.0",
        "symfony/http-client": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Phil\\MoneyBundle\\": "src"
        }
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "symfony/browser-kit": "^6.0",
        "symfony/framework-bundle": "^6.0",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/orm": "^2.12|^3.0",
        "florianv/exchanger": "^2.0",
        "php-http/message": "^1.0",
        "php-http/guzzle7-adapter": "^1.0",
        "vimeo/psalm": "^4.13",
        "symfony/phpunit-bridge": "^6.0",
        "phpunit/phpunit": "^9.5",
        "symfony/yaml": "^6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Phil\\MoneyBundle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "fix": [
            "tools/vendor/bin/php-cs-fixer fix",
            "vendor/bin/psalm --no-file-cache --no-cache",
            "vendor/bin/phpunit --coverage-text --coverage-html=.build"
        ]
    },
    "suggest": {
        "doctrine/doctrine-bundle": "~1.1",
        "doctrine/orm": "~2.7",
        "florianv/exchanger": "Exchanger is a PHP framework to work with currency exchange rates from various services."
    }
}
